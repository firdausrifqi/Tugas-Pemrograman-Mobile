<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenghitungTrpsm">

    <LinearLayout
        android:id="@+id/trpsmid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Trapesium"
            android:textColor="@color/white"
            android:textSize="30sp"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/trapesium" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Trapesium adalah bangun datar yang dibentuk oleh empat buah rusuk yang dua di antaranya saling sejajar namun tidak sama panjang. rumus mencari nilai luas dan keliling trapesium adalah sebagai berikut:"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Luas : (AB + EF) x T / 2"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="keliling : SSM + A + T"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/InputAB"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:hint="Masukkan Nilai AB"
                android:inputType="number"
                android:textColor="#DDD"
                android:textColorHint="#CCC" />

            <EditText
                android:id="@+id/InputAE"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Masukkan Nilai AE"
                android:inputType="number"
                android:textColor="#DDD"
                android:textColorHint="#CCC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputT"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:hint="Masukkan Nilai T"
                android:inputType="number"
                android:textColor="#DDD"
                android:textColorHint="#CCC" />

            <EditText
                android:id="@+id/inputEF"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Masukkan Nilai EF"
                android:inputType="number"
                android:textColor="#DDD"
                android:textColorHint="#CCC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnLuas"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:text="Hitung Luas"
                app:backgroundTint="@color/btn" />

            <Button
                android:id="@+id/BtnKel"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="Hitung Keliling"
                app:backgroundTint="@color/btn" />

        </LinearLayout>

        <TextView
            android:id="@+id/HasilOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Hasil"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>